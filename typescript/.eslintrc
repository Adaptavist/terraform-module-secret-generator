{
  "env": {
    "browser": false,
    "es2021": true,
    "jest/globals": true
  },
  "extends": [
    "standard"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "jest"
  ],
  "rules": {
    "indent": [1, 4],
    "semi": ["error", "always"],
    "no-new": "off",
    "no-useless-constructor": "off"
  }
}
